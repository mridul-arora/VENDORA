<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mesranew"
    tools:context="com.example.Vendora.WelcomeActivity">

    <Button
        android:id="@+id/welcome_vendor_btn"

        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="397dp"
        android:layout_marginBottom="273dp"
        android:background="@android:color/background_light"
        android:text="@string/i_m_a_vendor"
        android:textAllCaps="true"

        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />

    <Button
        android:id="@+id/welcome_customer_btn"

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/welcome_vendor_btn"


        android:layout_alignEnd="@+id/welcome_vendor_btn"
        android:layout_alignParentTop="true"

        android:layout_marginStart="-2dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="260dp"
        android:background="@android:color/holo_red_dark"
        android:text="@string/i_m_a_customer"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />
</RelativeLayout>